{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project EmtMed. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    }
  },
  "Outputs": {
    "httpApiguploadFileRoutePOSTupload": {
      "Description": "URL of uploadFile/upload:POST endpoint",
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Ref": "httpApiguploadFile"
            },
            ".execute-api.",
            {
              "Ref": "AWS::Region"
            },
            ".amazonaws.com",
            "/audio",
            "/upload"
          ]
        ]
      }
    },
    "EmtMed": {
      "Description": "ARN of Lambda function EmtMed",
      "Value": {
        "Fn::GetAtt": [
          "EmtMed",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "httpApiguploadFile": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Description": "An HTTP API generated by Sigma",
        "Name": "uploadFile",
        "ProtocolType": "HTTP",
        "CorsConfiguration": {
          "AllowHeaders": [
            "*"
          ],
          "AllowMethods": [
            "*"
          ],
          "AllowOrigins": [
            "*"
          ],
          "ExposeHeaders": [
            "*"
          ]
        }
      }
    },
    "httpApiguploadFileStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "httpApiguploadFile"
        },
        "Description": "Stage of API",
        "StageName": "audio",
        "AutoDeploy": true
      }
    },
    "EmtMed": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "EmtMed",
        "Description": "Invokes functions defined in EmtMed.py in project EmtMed. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "EmtMed.handler",
        "Timeout": 60,
        "Runtime": "python3.8",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "EmtMedExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "EmtMedExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        }
      }
    },
    "httpApiguploadFileIntegrationEmtMed": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "httpApiguploadFile"
        },
        "Description": "Integration of function: EmtMed to HTTP API: uploadFile",
        "IntegrationType": "AWS_PROXY",
        "PayloadFormatVersion": "2.0",
        "IntegrationUri": {
          "Fn::GetAtt": [
            "EmtMed",
            "Arn"
          ]
        }
      }
    },
    "httpApiguploadFileRoutePOSTupload": {
      "Type": "AWS::ApiGatewayV2::Route",
      "DependsOn": [
        "httpApiguploadFileIntegrationEmtMed"
      ],
      "Properties": {
        "ApiId": {
          "Ref": "httpApiguploadFile"
        },
        "RouteKey": "POST /upload",
        "AuthorizationType": "NONE",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "httpApiguploadFileIntegrationEmtMed"
              }
            ]
          ]
        }
      }
    },
    "httpApiguploadFileRoutePOSTuploadPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "EmtMed"
        },
        "SourceArn": {
          "Fn::Sub": [
            "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${__ApiId__}/*/${__Method__}${__Path__}",
            {
              "__Method__": "POST",
              "__Path__": "/upload",
              "__ApiId__": {
                "Ref": "httpApiguploadFile"
              }
            }
          ]
        },
        "Principal": "apigateway.amazonaws.com"
      }
    }
  }
}